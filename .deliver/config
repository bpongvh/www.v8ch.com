APP="v8ch"
BUILD_HOST="homestead"
BUILD_USER="vagrant"
BUILD_AT="/tmp/elixir/v8ch/builds"

PRODUCTION_HOSTS="v8ch.com"
PRODUCTION_USER="forge"
DELIVER_TO="/home/forge/v8ch.com+"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/vagrant/www.v8ch.com/config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}